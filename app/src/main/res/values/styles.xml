<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#616161</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BoxAttributes">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">#FAFAFA</item>
        <item name="android:maxLength">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">""</item>
        <item name="android:inputType">textCapCharacters</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#fafafa</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextHints">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>
